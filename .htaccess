# ResourceHub - Apache Configuration
# Configuración para el proyecto ResourceHub

# Habilitar rewrite engine
RewriteEngine On

# Página de inicio por defecto
DirectoryIndex index.html

# Redirigir a HTTPS (si está disponible)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Permitir CORS para desarrollo
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization"

# Manejar peticiones OPTIONS para CORS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Proteger archivos sensibles
<FilesMatch "\.(env|json|log|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger composer
<FilesMatch "^composer\.(json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger archivos de configuración
<FilesMatch "^(config|database)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permitir acceso a archivos en uploads
<Directory "uploads">
    Options -Indexes
    AllowOverride None
    Order allow,deny
    Allow from all
</Directory>

# Configuración de PHP
php_flag display_errors Off
php_flag log_errors On
php_value error_log logs/php_error.log
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value memory_limit 128M

# Comprimir archivos para mejor rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache de archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
</IfModule>

# Prevenir directory listing
Options -Indexes

# Seguir enlaces simbólicos
Options +FollowSymLinks

# Seguridad adicional
ServerSignature Off

# Proteger contra ataques XSS
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Error pages personalizadas (opcional)
# ErrorDocument 404 /error-404.html
# ErrorDocument 500 /error-500.html